<% @all_user.each do |user| %>
<div class="user" id="<%= user.id %>">
    <div class="avatar">
    <img src="<%= user.avatar_url %>" alt="<%= user.name %>">
    <div id= "<%= user.id %>" class="<% if user.status == true %> status online <% else %> status offline <% end %>"></div>
    </div>
    <div class="name name-cl"><%= link_to user.name,user.profile_url,target: "_blank" %></div>
    <div class="mood"><% if user.status == true %> Đang online <% else %> Offline <% end %></div>
</div>
<% end %>