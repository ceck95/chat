<!DOCTYPE html>
<html>
<head>
  <title>Chat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
  		<div class="col-md-12">
  			Hello,<strong><%= current_user.name %></strong>		
			&nbsp;<%= link_to raw("<i style='width:10px;height:30px;' alt='Logout' class='fa fa-sign-out'></i>"),thoat_path,remote: true %>
  		</div>
    <div style="display: none" id ="session_user"><%= session[:user_id] %></div>
  <% end %>
<%= yield %>

</body>
</html>
